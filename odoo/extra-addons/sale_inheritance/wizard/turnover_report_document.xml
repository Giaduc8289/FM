<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <template id="report_sale_turnover_document">
        <t t-call="web.html_container">
            <t t-call="web.report_layout">
                <!--                <link rel="stylesheet" href="/base_inheritance/static/src/css/style.css"/>-->
                <meta charset="utf-8"/>
                <div class="page" style="padding : 0;margin : 0;font-family : Arial;">
                    <div class="oe_structure"/>
                    <br/>
                    <h2 class="text-center bold"
                        style="width:100%; text-align:center;font-weight: 550;font-size: 40px;text-transform: uppercase;"><center>
                        BÁO CÁO DOANH THU</center></h2>
                    <br/>
                    <span class="text-center bold"><center>
                        <t t-if="date_start">
                            <span class="text-center bold"><strong>From date: <t t-esc="date_start"/></strong></span>
                        </t>
                        <t t-if="date_start and date_end">
                            <span class="text-center bold"><strong> - </strong></span>
                        </t>
                        <t t-if="date_end">
                            <span class="text-center bold"><strong>To date: <t t-esc="date_end"/></strong></span>
                        </t>
                        <br/>
                    </center>
                        <t t-if="nhacungcap">
                            <span class="text-center bold"><strong>Supplier: <t t-esc="tenkhach"/></strong></span>
                            <br/>
                        </t>
                    </span>
                    <br/>
                    <div>
                        <table class="table-bordered"
                               style="border-collapse: collapse; width : 100%; border : border-box;">
                            <thead>
                                <tr>
                                    <th style="width :3%;background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="table-item" rowspan="2">STT</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center" colspan="4">Thông tin khách hàng</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center" colspan="2">Thông tin sản phẩm</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center" colspan="4">Kế hoạch</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center" colspan="2">Thực hiện</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center" colspan="2">Cân đối</th>
                                </tr>
                                <tr>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Mã khách</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Số hợp đồng/ PO</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Ngày hợp đồng</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Tên khách hàng</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Mã Filler</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Mã Cus</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Sản lượng</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center" colspan="2">Đơn giá</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Thành tiền</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Sản lượng</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Thành tiền</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">SL chưa giao</th>
                                    <th style="background-color: #4cb1a7; color: #ffffff; border: 1px solid black; padding : 8px;border: 1px solid black;border: 1px solid black;"
                                        class="text-center">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody class="sale_tbody">
                                <t t-set="tong" t-value="0"/>
                                <t t-set="tongtien" t-value="0"/>
                                <t t-set="tong1" t-value="0"/>
                                <t t-set="tongtien1" t-value="0"/>
                                <t t-set="tong2" t-value="0"/>
                                <t t-set="tongtien2" t-value="0"/>
                                <t t-foreach="docs" t-as="doc">
                                    <t t-set="tong" t-value="tong+doc.total_product_qty"/>
                                    <t t-set="tongtien" t-value="tongtien+doc.price_total"/>
                                    <t t-set="tong1" t-value="tong1+doc.qty_delivered"/>
                                    <t t-set="tongtien1" t-value="tongtien1+doc.amount_total"/>
                                    <t t-set="tong2" t-value="tong2+(doc.total_product_qty-doc.qty_delivered)"/>
                                    <t t-set="tongtien2" t-value="tongtien2+(doc.total_product_qty-doc.qty_delivered)*doc.price_unit"/>
                                </t>
                                <tr style="background-color:yellow">
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                        <span t-esc="tong"/>
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                        VNĐ
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                        USD
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                        <span t-esc="tongtien"/>
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                        <span t-esc="tong1"/>
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                        <span t-esc="tongtien1"/>
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                        <span t-esc="tong2"/>
                                    </td>
                                    <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                        class="text-center">
                                        <span t-esc="tongtien2"/>
                                    </td>
                                </tr>
                                <t t-set="i" t-value="1"/>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-esc="i"/>
                                            <t t-set="i" t-value="i+1"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.khachhang"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.sale_name"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.date_order"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.khachhang"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.product_tmpl_id"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.total_product_qty"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.price_unit"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.price_unit"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.price_total"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.qty_delivered"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-esc="doc.total_product_qty - doc.qty_delivered"/>
                                        </td>
                                        <td style="text-align: center;padding : 8px;border: 1px solid black;"
                                            class="text-center">
                                            <span t-esc="(doc.total_product_qty - doc.qty_delivered)*doc.price_unit"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="oe_structure"/>
            </t>
        </t>
    </template>

</odoo>
